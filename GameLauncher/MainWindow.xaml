<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GameLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GameLauncher">

    <Grid>
        <Grid.Resources>
            <!-- ImageTextTemplate DataTemplate with Game Icon -->
            <DataTemplate x:Key='ImageTextTemplate' x:DataType='local:CustomDataObject'>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" 
                        Padding="12" 
                        Margin="8"
                        Width="280"
                        Height="120">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <Grid AutomationProperties.Name="{x:Bind Title}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Game Icon -->
                        <Border Grid.Column="0" 
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                CornerRadius="6"
                                Width="64"
                                Height="64"
                                VerticalAlignment="Top">
                            <Image Source="{x:Bind IconImage}" 
                                   Width="48" 
                                   Height="48"
                                   Stretch="Uniform" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Game Info -->
                        <StackPanel Grid.Column="1" 
                                    Margin="12,0,0,0" 
                                    VerticalAlignment="Top">
                            <TextBlock Text="{x:Bind Title}" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       TextWrapping="Wrap"
                                       MaxLines="2"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{x:Bind ExecutablePath}" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap"
                                       MaxLines="2"
                                       Opacity="0.7"
                                       FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
            
            <!-- Fallback TextTemplate for items without icons -->
            <DataTemplate x:Key='TextTemplate' x:DataType='local:CustomDataObject'>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="8"
                        Width="240"
                        Height="120">
                    <Border.Shadow>
                        <ThemeShadow />
                    </Border.Shadow>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="{x:Bind Title}" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxLines="2"/>
                        <TextBlock Text="{x:Bind ExecutablePath}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxLines="2"
                                   Opacity="0.7"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="CustomTitleBar" Grid.Row="0" Height="48" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="138"/><!-- Reserved space for Windows caption buttons -->
            </Grid.ColumnDefinitions>
            
            <!-- App Icon and Title -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                <TextBlock Text="🎮" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="GameLauncher" Style="{StaticResource CaptionTextBlockStyle}" VerticalAlignment="Center" Opacity="0.8"/>
            </StackPanel>

            <!-- Draggable area -->
            <Border Grid.Column="1" Background="Transparent" x:Name="DragArea"/>

            <!-- Add Game button - moved to avoid system buttons -->
            <Button x:Name="AddGameButton" Grid.Column="2" Content="添加游戏" Click="AddGameButton_Click" 
                    Style="{StaticResource AccentButtonStyle}" Margin="0,0,12,0" VerticalAlignment="Center"/>
            
            <!-- Reserved space for Windows caption buttons (minimize, maximize, close) -->
            <!-- Grid.Column="3" is intentionally left empty for system buttons -->
        </Grid>

        <!-- Main content area -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Games section header -->
                <TextBlock Text="我的游戏" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,20"/>
                
                <!-- Games grid -->
                <GridView
                    x:Name="ContentGridView"
                    ItemsSource="{x:Bind Items}"
                    ItemTemplate="{StaticResource ImageTextTemplate}"
                    IsItemClickEnabled="True"
                    CanDragItems="True"
                    AllowDrop="True"
                    CanReorderItems="True"
                    SelectionMode="None"
                    SelectionChanged="ContentGridView_SelectionChanged"
                    ItemClick="ContentGridView_ItemClick"
                    FlowDirection="LeftToRight"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
