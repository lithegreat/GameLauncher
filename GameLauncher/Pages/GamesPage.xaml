<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GameLauncher.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameLauncher"
    xmlns:pages="using:GameLauncher.Pages"
    xmlns:models="using:GameLauncher.Models"
    xmlns:services="using:GameLauncher.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- 颜色转换器 -->
        <services:ColorStringToColorConverter x:Key="ColorConverter"/>
        
        <!-- Context Menu for Game Items -->
        <MenuFlyout x:Key="GameContextMenu">
            <MenuFlyoutItem x:Name="OpenGameMenuItem" Text="打开游戏" Icon="Play" Click="OpenGameMenuItem_Click"/>
            <MenuFlyoutItem x:Name="SetCategoryMenuItem" Text="设置分类" Icon="Tag" Click="SetCategoryMenuItem_Click"/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="DeleteGameMenuItem" Text="删除游戏" Icon="Delete" Click="DeleteGameMenuItem_Click"/>
            <MenuFlyoutItem x:Name="OpenGameDirectoryMenuItem" Text="打开游戏目录" Icon="Folder" Click="OpenGameDirectoryMenuItem_Click"/>
            <MenuFlyoutSeparator x:Name="SteamSeparator"/>
            <MenuFlyoutItem x:Name="OpenInSteamMenuItem" Text="在Steam中打开" Icon="Shop" Click="OpenInSteamMenuItem_Click"/>
        </MenuFlyout>

        <!-- Game Navigation Item Template -->
        <DataTemplate x:Key="GameNavigationItemTemplate" x:DataType="local:CustomDataObject">
            <Grid Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Game Icon -->
                <Border Grid.Column="0" 
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="4"
                        Width="32"
                        Height="32"
                        Margin="0,0,12,0">
                    <Image Source="{x:Bind IconImage}" 
                           Width="24" 
                           Height="24"
                           Stretch="Uniform"/>
                </Border>
                
                <!-- Game Title -->
                <TextBlock Grid.Column="1" 
                           Text="{x:Bind Title}" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"
                           MaxLines="1"/>
                
                <!-- Category Color Indicator -->
                <Ellipse Grid.Column="2" 
                         Width="8" 
                         Height="8" 
                         Margin="8,0,0,0"
                         VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{x:Bind CategoryColor, Converter={StaticResource ColorConverter}}"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with title and main buttons -->
        <Grid Grid.Row="0" Margin="24,24,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" x:Name="MyGamesHeader" Text="我的游戏" 
                       Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            
            <!-- Button panel -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <!-- Delete Mode Toggle Button -->
                <Button x:Name="DeleteModeButton" Content="删除游戏" 
                        Click="DeleteModeButton_Click" Style="{StaticResource DefaultButtonStyle}"/>
                
                <!-- Add/Import Games DropDownButton -->
                <DropDownButton x:Name="AddGameDropDownButton" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="添加游戏"/>
                    </StackPanel>
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="AddGameMenuItem" Text="手动添加游戏" Click="AddGameButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE710;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="ImportSteamGamesMenuItem" Text="导入Steam游戏" Click="ImportSteamGamesMenuItem_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE968;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="ImportXboxGamesMenuItem" Text="导入Xbox游戏" Click="ImportXboxGamesMenuItem_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE990;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
                        
                <!-- Delete Selected Button (initially hidden) -->
                <Button x:Name="DeleteSelectedButton" Content="删除选中" 
                        Click="DeleteSelectedButton_Click" Style="{StaticResource DefaultButtonStyle}" 
                        Background="{ThemeResource SystemFillColorCriticalBrush}" Visibility="Collapsed"/>
                        
                <!-- Cancel Delete Mode Button (initially hidden) -->
                <Button x:Name="CancelDeleteButton" Content="取消" 
                        Click="CancelDeleteButton_Click" Style="{StaticResource DefaultButtonStyle}" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- Main Content with NavigationView Style -->
        <Grid Grid.Row="1" Margin="24,0,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Games List with Category Filter -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="8"
                    Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Category Filter Section -->
                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                        <TextBlock Text="分类筛选" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   Margin="0,0,0,8"/>
                        
                        <ComboBox x:Name="CategoryComboBox"
                                  ItemsSource="{x:Bind Categories, Mode=OneWay}"
                                  SelectedIndex="0"
                                  SelectionChanged="CategoryComboBox_SelectionChanged"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models:GameCategory">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" 
                                                 Width="12" 
                                                 Height="12" 
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="{x:Bind Color, Converter={StaticResource ColorConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{x:Bind DisplayText}" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button x:Name="ManageCategoriesButton" 
                                Click="ManageCategoriesButton_Click" 
                                Style="{StaticResource DefaultButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B7;" FontSize="16"/>
                                <TextBlock Text="管理分类"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Border Grid.Row="1" 
                            Height="1" 
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                            Margin="16,0"/>

                    <!-- Games List -->
                    <ScrollViewer Grid.Row="2" Margin="8,8,8,16">
                        <ListView x:Name="GamesListView"
                                  ItemsSource="{x:Bind FilteredItems, Mode=OneWay}"
                                  SelectionMode="Single"
                                  IsItemClickEnabled="True"
                                  ItemClick="GamesListView_ItemClick"
                                  SelectionChanged="GamesListView_SelectionChanged"
                                  RightTapped="GamesListView_RightTapped"
                                  CanDragItems="True"
                                  CanReorderItems="True"
                                  AllowDrop="True">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:CustomDataObject">
                                    <Border Background="Transparent"
                                            CornerRadius="4"
                                            Padding="8"
                                            ContextFlyout="{StaticResource GameContextMenu}">
                                        <ContentPresenter Content="{x:Bind}"
                                                          ContentTemplate="{StaticResource GameNavigationItemTemplate}"/>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="4,2"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Panel: Game Details -->
            <Border Grid.Column="1" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    CornerRadius="8">
                <ScrollViewer x:Name="GameDetailsScrollViewer" Padding="24">
                    <Grid>
                        <StackPanel x:Name="GameDetailsPanel" Spacing="16" Visibility="Collapsed">
                            <!-- Game Header -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Game Icon -->
                                <Border Grid.Column="0" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Width="80"
                                        Height="80"
                                        Margin="0,0,16,0">
                                    <Image x:Name="GameIcon" 
                                           Width="64" 
                                           Height="64"
                                           Stretch="Uniform"/>
                                </Border>

                                <!-- Game Title and Category -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="GameTitle" 
                                               Style="{StaticResource TitleTextBlockStyle}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"/>
                                
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" 
                                                 x:Name="CategoryColorIndicator"
                                                 Width="12" 
                                                 Height="12" 
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   x:Name="GameCategory" 
                                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Launch Button -->
                                <Button Grid.Column="2" 
                                        x:Name="LaunchGameButton"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Click="LaunchGameButton_Click"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                        <TextBlock Text="启动游戏"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Game Information Cards -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Game Type Info -->
                                <Border Grid.Column="0" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="0,0,8,0">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="游戏类型" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <StackPanel x:Name="GameTypePanel" Spacing="4">
                                            <!-- Content will be populated in code-behind -->
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Game Stats -->
                                <Border Grid.Column="1" 
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16"
                                        Margin="8,0,0,0">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="游戏统计" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <StackPanel Spacing="4">
                                            <TextBlock x:Name="PlaytimeText" Style="{StaticResource BodyTextBlockStyle}"/>
                                            <TextBlock x:Name="LastActivityText" Style="{StaticResource BodyTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- File Information -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="文件信息" 
                                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Executable Path -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="可执行文件:" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Top"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   x:Name="ExecutablePathText"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   TextWrapping="Wrap"
                                                   IsTextSelectionEnabled="True"
                                                   Margin="0,0,8,0"/>
                                        <Button Grid.Row="0" Grid.Column="2"
                                                x:Name="OpenDirectoryButton"
                                                Content="打开目录"
                                                Style="{StaticResource DefaultButtonStyle}"
                                                Click="OpenDirectoryButton_Click"/>

                                        <!-- File Size -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                   Text="文件大小:" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   x:Name="FileSizeText"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   Margin="0,8,8,0"/>

                                        <!-- Last Modified -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                   Text="修改时间:" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Margin="0,8,8,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   x:Name="LastModifiedText"
                                                   Style="{StaticResource BodyTextBlockStyle}"
                                                   Margin="0,8,8,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Actions -->
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="16">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="操作" 
                                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    
                                    <StackPanel x:Name="ActionsPanel" Spacing="8">
                                        <!-- Actions will be populated in code-behind based on game type -->
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyStatePanel" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <FontIcon Glyph="&#xE7FC;" 
                                      FontSize="48" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="选择一个游戏查看详细信息" 
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>