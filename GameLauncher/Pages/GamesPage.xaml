<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GameLauncher.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Context Menu for Game Items -->
        <MenuFlyout x:Key="GameContextMenu">
            <MenuFlyoutItem x:Name="OpenGameMenuItem" Text="打开游戏" Icon="Play" Click="OpenGameMenuItem_Click"/>
            <MenuFlyoutItem x:Name="DeleteGameMenuItem" Text="删除游戏" Icon="Delete" Click="DeleteGameMenuItem_Click"/>
            <MenuFlyoutItem x:Name="OpenGameDirectoryMenuItem" Text="打开游戏目录" Icon="Folder" Click="OpenGameDirectoryMenuItem_Click"/>
            <MenuFlyoutSeparator x:Name="SteamSeparator"/>
            <MenuFlyoutItem x:Name="OpenInSteamMenuItem" Text="在Steam中打开" Icon="Shop" Click="OpenInSteamMenuItem_Click"/>
        </MenuFlyout>

        <!-- ImageTextTemplate DataTemplate with Game Icon -->
        <DataTemplate x:Key='ImageTextTemplate' x:DataType='local:CustomDataObject'>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    Padding="12" 
                    Margin="8"
                    Width="280"
                    Height="120"
                    ContextFlyout="{StaticResource GameContextMenu}">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <Grid AutomationProperties.Name="{x:Bind Title}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Game Icon -->
                    <Border Grid.Column="0" 
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="6"
                            Width="64"
                            Height="64"
                            VerticalAlignment="Top">
                        <Image Source="{x:Bind IconImage}" 
                               Width="48" 
                               Height="48"
                               Stretch="Uniform" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    </Border>
                    
                    <!-- Game Info -->
                    <StackPanel Grid.Column="1" 
                                Margin="12,0,0,0" 
                                VerticalAlignment="Top">
                        <TextBlock Text="{x:Bind Title}" 
                                   Style="{StaticResource SubtitleTextBlockStyle}" 
                                   TextWrapping="Wrap"
                                   MaxLines="2"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{x:Bind ExecutablePath}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   TextWrapping="Wrap"
                                   MaxLines="2"
                                   Opacity="0.7"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
        
        <!-- Fallback TextTemplate for items without icons -->
        <DataTemplate x:Key='TextTemplate' x:DataType='local:CustomDataObject'>
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" 
                    Padding="16" 
                    Margin="8"
                    Width="240"
                    Height="120"
                    ContextFlyout="{StaticResource GameContextMenu}">
                <Border.Shadow>
                    <ThemeShadow />
                </Border.Shadow>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Title}" 
                               Style="{StaticResource SubtitleTextBlockStyle}" 
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxLines="2"/>
                    <TextBlock Text="{x:Bind ExecutablePath}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               MaxLines="2"
                               Opacity="0.7"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with buttons -->
        <Grid Grid.Row="0" Margin="24,24,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" x:Name="MyGamesHeader" Text="我的游戏" 
                       Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            
            <!-- Button panel -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <!-- Delete Mode Toggle Button -->
                <Button x:Name="DeleteModeButton" Content="删除游戏" 
                        Click="DeleteModeButton_Click" Style="{StaticResource DefaultButtonStyle}"/>
                
                <!-- Clean Duplicate Games Button -->
                <Button x:Name="CleanDuplicateGamesButton" 
                        Click="CleanDuplicateGamesButton_Click" 
                        Style="{StaticResource DefaultButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                        <TextBlock Text="清理重复"/>
                    </StackPanel>
                </Button>
                
                <!-- Import Steam Games Button -->
                <Button x:Name="ImportSteamGamesButton" 
                        Click="ImportSteamGamesButton_Click" 
                        Style="{StaticResource DefaultButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;" FontSize="16"/>
                        <TextBlock Text="导入Steam游戏"/>
                    </StackPanel>
                </Button>
                        
                <!-- Add Game Button -->
                <Button x:Name="AddGameButton" Content="添加游戏" 
                        Click="AddGameButton_Click" Style="{StaticResource AccentButtonStyle}"/>
                        
                <!-- Delete Selected Button (initially hidden) -->
                <Button x:Name="DeleteSelectedButton" Content="删除选中" 
                        Click="DeleteSelectedButton_Click" Style="{StaticResource DefaultButtonStyle}" 
                        Background="{ThemeResource SystemFillColorCriticalBrush}" Visibility="Collapsed"/>
                        
                <!-- Cancel Delete Mode Button (initially hidden) -->
                <Button x:Name="CancelDeleteButton" Content="取消" 
                        Click="CancelDeleteButton_Click" Style="{StaticResource DefaultButtonStyle}" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- Games content -->
        <ScrollViewer Grid.Row="1" Padding="24">
            <GridView
                x:Name="ContentGridView"
                ItemsSource="{x:Bind Items, Mode=OneWay}"
                ItemTemplate="{StaticResource ImageTextTemplate}"
                IsItemClickEnabled="True"
                CanDragItems="True"
                AllowDrop="True"
                CanReorderItems="True"
                SelectionMode="None"
                SelectionChanged="ContentGridView_SelectionChanged"
                ItemClick="ContentGridView_ItemClick"
                RightTapped="ContentGridView_RightTapped"
                FlowDirection="LeftToRight"/>
        </ScrollViewer>
    </Grid>
</Page>