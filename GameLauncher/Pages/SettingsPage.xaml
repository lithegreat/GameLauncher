<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GameLauncher.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameLauncher.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- Settings Header -->
            <TextBlock Text="设置" 
                       Style="{StaticResource TitleTextBlockStyle}"/>
            
            <!-- Theme Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="外观" 
                           Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="12">
                    <TextBlock Text="应用主题" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="选择应用的主题外观" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Opacity="0.7"/>
                    
                    <!-- Simple Theme RadioButtons -->
                    <StackPanel Spacing="8" Margin="0,8,0,0">
                        <RadioButton x:Name="LightThemeRadio" 
                                     Content="浅色主题" 
                                     GroupName="ThemeGroup"
                                     Click="ThemeRadio_Click"
                                     Tag="Light"/>
                        
                        <RadioButton x:Name="DarkThemeRadio" 
                                     Content="深色主题" 
                                     GroupName="ThemeGroup"
                                     Click="ThemeRadio_Click"
                                     Tag="Dark"/>
                        
                        <RadioButton x:Name="SystemThemeRadio" 
                                     Content="跟随系统" 
                                     GroupName="ThemeGroup"
                                     Click="ThemeRadio_Click"
                                     Tag="Default"
                                     IsChecked="True"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Auto Update Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="自动更新" 
                           Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <StackPanel Spacing="12">
                    <!-- Enable Auto Update -->
                    <ToggleSwitch x:Name="AutoUpdateToggle" 
                                  Header="启用自动更新"
                                  OnContent="开启" 
                                  OffContent="关闭"
                                  IsOn="True"
                                  Toggled="AutoUpdateToggle_Toggled"/>
                    
                    <TextBlock Text="自动检查并安装应用程序更新" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Opacity="0.7"
                               Margin="0,-8,0,8"/>

                    <!-- Include Prerelease -->
                    <ToggleSwitch x:Name="IncludePrereleaseToggle" 
                                  Header="包含预发布版本"
                                  OnContent="包含" 
                                  OffContent="仅正式版"
                                  IsOn="False"
                                  Toggled="IncludePrereleaseToggle_Toggled"/>
                    
                    <TextBlock Text="是否接收预发布版本的更新（可能不稳定）" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Opacity="0.7"
                               Margin="0,-8,0,8"/>

                    <!-- Update Frequency -->
                    <StackPanel x:Name="UpdateFrequencyPanel" Spacing="8">
                        <TextBlock Text="检查频率" 
                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        
                        <RadioButton x:Name="OnStartupRadio" 
                                     Content="每次启动时检查" 
                                     GroupName="UpdateFrequencyGroup"
                                     Click="UpdateFrequencyRadio_Click"
                                     Tag="OnStartup"
                                     IsChecked="True"/>
                        
                        <RadioButton x:Name="WeeklyRadio" 
                                     Content="每周检查" 
                                     GroupName="UpdateFrequencyGroup"
                                     Click="UpdateFrequencyRadio_Click"
                                     Tag="Weekly"/>
                    </StackPanel>

                    <!-- Manual Check Button -->
                    <Button x:Name="CheckUpdateButton" 
                            Content="立即检查更新" 
                            Click="CheckUpdateButton_Click"
                            Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
            
            <!-- App Information -->
            <StackPanel Spacing="8">
                <TextBlock Text="应用信息" 
                           Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock x:Name="VersionTextBlock"
                           Text="GameLauncher v1.0" 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Opacity="0.8"/>
                <TextBlock Text="一个简单的游戏启动器应用程序" 
                           Style="{StaticResource CaptionTextBlockStyle}" 
                           Opacity="0.6"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>